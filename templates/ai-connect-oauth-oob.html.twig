<div class="ai-connect-oauth-oob">
  <div class="oob-header">
    <h1>{{ 'Authorization Successful'|t }}</h1>
  </div>

  <div class="oob-body">
    <p>{{ 'Copy this code and paste it into your application:'|t }}</p>
    
    <div class="oob-code">
      <code id="authorization-code">{{ code }}</code>
      <button onclick="copyCode()" class="button button--primary">{{ 'Copy Code'|t }}</button>
    </div>

    <div class="oob-instructions">
      <p><strong>{{ 'Instructions:'|t }}</strong></p>
      <ol>
        <li>{{ 'Copy the code above'|t }}</li>
        <li>{{ 'Return to your application'|t }}</li>
        <li>{{ 'Paste the code when prompted'|t }}</li>
      </ol>
    </div>
  </div>
</div>

<script>
function copyCode() {
  const code = document.getElementById('authorization-code').textContent;
  navigator.clipboard.writeText(code).then(function() {
    alert('Code copied to clipboard!');
  });
}
</script>

