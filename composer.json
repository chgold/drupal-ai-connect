  "type": "drupal-module",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "drupal/core": "^9 || ^10 || ^11",
    "mglaman/drupal-check": "*"
  },
  "autoload": {
    "psr-4": {
      "Drupal\\ai_connect\\": "src/"
    }
  },
  "config": {
    "audit": {
      "block-insecure": false
    }
  }
}
